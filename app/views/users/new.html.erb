<h1 class="sign">Sign Up </h1>
<%= form_with(model: @user, local: true) do |f| %>

<div class= "form-container">
  <div class = "form_group">
    <%= f.label :username %><br/>
    <%= f.text_field :username, class: "form-control" %>
  </div>

  <div class = "form_group">
    <%= f.label :password %><br/>
    <%= f.text_field :password, class: "form-control" %>
  </div>

  <div class="form_group">
    <%= f.submit %>
  </div>
</div>



<% end %>