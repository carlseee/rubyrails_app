<%= form_with scope: :category, model: @category, locale: true do |f| %>
    <div class = "container">
    
    <div class = "validation_error">
      <% if @category.errors.any? %>
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <%end%>
        </ul>
      <%end%>
    </div>
    
    <div class = "form_title">
      <th><%= f.label :Category %></th>
      <th><%= f.text_field :name %></th>
    </div>
    <div class = "form_body">
      <th><%= f.label :Description%></th>
      <th><%= f.text_field :description %></th>
    </div>
    <div class = "form_body">
      <th><%= f.number_field :user_id, id: :categories_user_id, class:"form-control", value: current_user.id, type: :hidden %></th>
    </div>
  

    
    <div class = "form_button">
      <%= f.submit :"Add Category" %>
     </div>
    <% end %>
    </div>